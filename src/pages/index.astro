---
import Layout from '../layouts/Layout.astro';
import Form from '../components/Form';
import Link from '../components/Link';
---

<Layout title="Local Google Fonts" description="A small helper to download web fonts and CSS with unicode-range support from Google Fonts for local hosting.">
	<div class="flex flex-col min-h-screen mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
		<header class="py-6 md:py-10">
			<h1 class="font-extrabold text-2xl md:text-5xl leading-loose text-center">
				<span class="bg-clip-text text-transparent bg-gradient-to-r from-cyan-500 to-sky-500">Local Google Fonts</span>
			</h1>
		</header>
		<main class="mb-auto">
			<Form client:visible />
		</main>
		<footer class="py-4 md:py-6 flex flex-col items-center justify-center gap-2">
			<a href="https://required.com/">
				<img src="/required-logo.svg" width="92p" height="56" alt="Logo of required" />
			</a>
			<Link href="https://github.com/wearerequired/local-google-fonts">Source @ GitHub</Link>
		</footer>
	</div>
</Layout>
