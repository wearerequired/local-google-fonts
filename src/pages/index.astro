---
import Form from '../components/Form';
import Link from '../components/Link';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Local Google Fonts" description="A helper to download web fonts and CSS with unicode-range support from Google Fonts for local hosting. Supports theme.json for WordPress.">
	<div class="flex flex-col group-not-[.is-embed]/layout:min-h-screen mx-auto max-w-5xl px-4 sm:px-6 lg:px-8 py-6 md:py-10">
		<header class="pb-6 md:pb-10 group-[.is-embed]/layout:hidden">
			<h1 class="font-extrabold text-2xl md:text-5xl leading-loose text-center">
				<span class="bg-clip-text text-transparent bg-gradient-to-r from-cyan-500 to-sky-500">Local Google Fonts</span>
			</h1>
		</header>
		<main class="mb-auto">
			<Form client:visible />
		</main>
		<footer class="pt-4 md:pt-6 flex flex-col items-center justify-center gap-3 group-[.is-embed]/layout:hidden">
			<a href="https://required.com/">
				<img src="/required-logo.svg" width="92" height="56" alt="Logo of required" />
			</a>
			<Link href="https://github.com/wearerequired/local-google-fonts" class="text-sm" target="_blank">Source</Link>
		</footer>
	</div>
</Layout>
